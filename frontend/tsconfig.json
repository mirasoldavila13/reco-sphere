{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src",
    "jest.config.ts",
    "vite.config.ts",
    "eslint.config.js",
    "jest.config.js",
    "vite.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
